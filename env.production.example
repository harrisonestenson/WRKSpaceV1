# Production Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@your-db-host:5432/your-database-name"
DIRECT_URL="postgresql://username:password@your-db-host:5432/your-database-name"

# NextAuth Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-super-secret-key-at-least-32-characters-long"

# Authentication Providers (Optional)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration (Optional - for password reset, notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# File Storage (Optional - for profile photos, documents)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="your-bucket-name"

# Monitoring and Analytics (Optional)
# SENTRY_DSN="your-sentry-dsn"
# GOOGLE_ANALYTICS_ID="your-ga-id"

# Security
# JWT_SECRET="your-jwt-secret-key"
# ENCRYPTION_KEY="your-encryption-key"

# Rate Limiting (Optional)
# RATE_LIMIT_MAX="100"
# RATE_LIMIT_WINDOW="900000"

# Logging
NODE_ENV="production"
LOG_LEVEL="info"

# Performance
# REDIS_URL="redis://localhost:6379"
# CACHE_TTL="3600" 